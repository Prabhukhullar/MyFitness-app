<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/gym" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/txt_homeWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Home workout"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <View
            android:layout_width="140dp"
            android:layout_height="2dp"
            android:layout_alignStart="@+id/txt_homeWorkout"
            android:layout_alignEnd="@+id/txt_homeWorkout"
            android:background="#00ff00"
            android:layout_below="@+id/txt_homeWorkout"
            />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>